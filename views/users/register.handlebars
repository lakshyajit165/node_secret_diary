<br><br>
<div class="row">
	<div class="col-md-6 mx-auto">
		<div class="card card-body">
			<h3 class="text-center"><i class="fa fa-address-book-o fa-x mr-3" aria-hidden="true"></i>Account Register</h3>
			<form action="/users/register" method="POST">
				<div class="form-group">
					<label for="name">Name</label>
					<input type="text" class="form-control" value="{{name}}" name="name" required>
				</div>
				<div class="form-group">
					<label for="email">Email</label>
					<input type="email" class="form-control" name="email" value="{{email}}" required>
				</div>	
				<div class="form-group">
					<label for="password">Password</label>
					<input type="password" class="form-control" name="password" value="{{password}}" required>
				</div>
				<div class="form-group">
					<label for="password2">Confirm Password</label>
					<input type="password" class="form-control" name="password2" value="{{password2}}" required>
				</div>
					

				<div class="text-center">
					<button type="submit" class="btn btn-dark">Submit</button>
				</div>	
			</form>	
		</div>	
	</div>	
</div>	