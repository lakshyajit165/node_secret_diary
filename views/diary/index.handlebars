{{#each ideas}}
<div class="card card-body text-center">
	<h4>{{title}}</h4>
	<hr>
	<p class="lead"><i class="fa fa-quote-left fa-2x" style="margin-right: 10px"></i>{{details}}</p>
	<div class="row">
			<a href="/diary/edit/{{id}}" class="btn btn-dark btn-lg ml-auto mr-2">Edit</a>
			<form method="POST" action="/diary/{{id}}?_method=DELETE" class="mr-auto">
					<input type="hidden" name="_method" value="DELETE">
					<input type="submit" class="btn btn-danger btn-lg" value="Delete">
			</form>	
	</div>
</div>	
<br>
{{else}}
	<p>No Scribbles listed!</p>
{{/each}}